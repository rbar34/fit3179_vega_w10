{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Immigration into Australia (2005)",
  "width": "container",
  "height": 500,
        "params": [
          {
            "name": "EmmigrationAbove",
            "value": 0,
            "bind": {
              "input": "range",
              "min": 0,
              "max": 6000,
              "step": 500,
              "name": "Show Emmigration Above"
            }
          }
        ],
  "layer": [
    {
      "projection": {"type": "equirectangular"},
      "data": {
        "url": "data/ne_110m_admin_0_countries.topojson",
        "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
      },
      "transform": [
        {
          "lookup": "properties.BRK_NAME",
          "from": {
            "data": {
              "url": "data/MIG_03102021053257916.csv"
            },
            "key": "Country of birth/nationality",
            "fields": ["Value"]
          },
          "as": ["Emmigrants"]
        }
      ],
      "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white"},
      "encoding": {
        "tooltip": [
          {"field": "properties.NAME", "type": "nominal", "title": "Country"},
          {"field": "Emmigrants", "type":"quantitative"}
        ]
      }
    },
    {
      "projection": {"type": "equirectangular"},
      "data": {
        "url": "data/average-latitude-longitude-countries.csv"
      },
      "mark": "circle",
      "encoding": {
        "longitude": {"field": "Longitude", "type": "quantitative"},
        "latitude": {"field": "Latitude", "type": "quantitative"},
        "size": {"value": 5},
        "color": {"value": "gray"}
      }
    },
    {
      "projection": {"type": "equirectangular"},
      "data": {
        "url": "data/MIG_03102021053257916.csv"
      },

      "transform": [
                {
                  "filter": "datum.Value > EmmigrationAbove"
                },
        {
          "lookup": "Country of birth/nationality",
          "from": {
            "data": {
              "url": "data/average-latitude-longitude-countries.csv"
            },
            "key": "Country",
            "fields": ["Latitude", "Longitude"]
          },
          "as": ["origin_latitude", "origin_longitude"]
        },
        {
          "lookup": "Country",
          "from": {
            "data": {
              "url": "data/average-latitude-longitude-countries.csv"
            },
            "key": "Country",
            "fields": ["Latitude", "Longitude"]
          },
          "as": ["dest_latitude", "dest_longitude"]
        }
      ],
      "mark": {
        "type": "rule",
        "color": "black",
        "strokeCap": "round",
        "opacity": 0.6
      },
      "encoding": {
        "longitude": {"field": "origin_longitude", "type": "quantitative"},
        "latitude": {"field": "origin_latitude", "type": "quantitative"},
        "longitude2": {"field": "dest_longitude"},
        "latitude2": {"field": "dest_latitude"},
        "size": {
          "field": "Value",
          "type": "quantitative",
          "scale": {"range": [0, 10]},
          "legend": null
        }
      }
    }
  ],
  "config": {}
}